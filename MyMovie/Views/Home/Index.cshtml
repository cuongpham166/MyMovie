@model IEnumerable<MyMovie.Models.Movie>
@{
    ViewData["Title"] = "Home Page";
}
@section Styles{
    <link rel="stylesheet" href="~/css/home.css" />
}

<div class="cards-container">
    @if (Model.Count() > 0)
     {
        @foreach (var obj in Model)
        {
            <div class="k-card">
                <div class="k-card-header">
                    <h5 class="k-card-title">@obj.Title</h5>
                </div>
                <div class="img_container">
                    <img class="k-card-img" style="width:285px;" src="https://image.tmdb.org/t/p/w500/@obj.ImageUrl" />
                </div>
                <div class="k-card-body">
                    <p>@obj.Overview</p>
                </div>
                <div class="k-card-actions k-card-actions-stretched">
                    <span class="k-card-action">
                        <span class="k-button k-flat k-primary">
                            <a asp-controller="Movie" asp-route-Id="@obj.Id" asp-action="Detail">See Detail</a>
                        </span>
                    </span>
                </div>
            </div>
         }
     }
    else
    {
        <p>No Movie in DB</p>
    }
</div>
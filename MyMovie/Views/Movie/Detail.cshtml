@model MyMovie.Models.Movie
@{
    ViewData["Title"] = "Detail";
}

<input asp-for="Id" hidden />
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h3 class="text-primary text-left">@Model.Title</h3>
        </div>
    </div>
    <div class="row pt-4">
        <div class="col-sm-4">
            <img class="img-responsive" style="width:100%" src="https://image.tmdb.org/t/p/w500/@Model.ImageUrl" alt="Card image" />
        </div>
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header">Detailed Info</div>
                <ul class="list-group">
                    <li class="list-group-item">@Model.Title</li>
                    <li class="list-group-item">@Model.Score</li>
                    <li class="list-group-item">@Model.Overview</li>
                </ul>
            </div>
        </div>
    </div>
</div>